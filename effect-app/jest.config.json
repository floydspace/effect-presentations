{
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.ts?(x)",
    "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
  ],
  "clearMocks": true,
  "collectCoverage": false,
  "testPathIgnorePatterns": ["/node_modules/"],
  "watchPathIgnorePatterns": ["/node_modules/"],
  "reporters": ["default"],
  "transform": {
    "^.+\\.[t]sx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.dev.json"
      }
    ]
  }
}
